{% extends 'base.html.twig' %}

{% block title %}Alumnos index{% endblock %}

{% block body %}
    <h1>Alumnos index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cuil</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for alumno in alumnos %}
            <tr>
                <td>{{ alumno.id }}</td>
                <td>{{ alumno.cuil }}</td>
                <td>{{ alumno.nombre }}</td>
                <td>{{ alumno.apellido }}</td>
                <td>{{ alumno.email }}</td>
                <td>
                    <a href="{{ path('app_alumnos_show', {'id': alumno.id}) }}">show</a>
                    <a href="{{ path('app_alumnos_edit', {'id': alumno.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_alumnos_new') }}">Create new</a>
{% endblock %}
